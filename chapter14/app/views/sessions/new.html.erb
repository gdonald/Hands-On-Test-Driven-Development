<div class="col-3 ms-2">
  <%= form_for(:login, url: login_path) do |f| %>
    <h2>Sign in</h2>
    <div class="mt-3">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="mt-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  <% end %>
</div>
